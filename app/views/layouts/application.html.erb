<!DOCTYPE html>
<html>
<head>
  <title>Plato</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield :head %>
</head>
<body>
    <%- if user_signed_in? %>
      <%= "Signed in as #{current_user.name}. Not you?" %>
      <%= yield %>
    <%- else %>
      <%= link_to 'Sign in with Facebook', user_oauth_authorize_url(:facebook) %>
    <%- end %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</body>
</html>
